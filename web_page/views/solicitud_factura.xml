<odoo>
 <record id="solicitud_factura_tree" model="ir.ui.view">
    <field name="name">solicitud.factura.tree</field> 
    <field name="model">solicitud.factura</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="code"/>
        <field name="pedido_id"/>
        <field name="customer_id"/>
      </tree>
    </field> 
  </record>

  <record id="solicitud_factura_form" model="ir.ui.view"> 
    <field name="name">solicitud.factura.form</field> 
    <field name="model">solicitud.factura</field>
    <field name="arch" type="xml">
      <form string="Solicitud de facturas">
          <header>
          </header>
          <sheet>
              <div class="oe_button_box" name="button_box">
              </div>
              <group>
                <div class="oe_title">
                  <h1>
                    <field name="name" required="1" placeholder="Solicitud"/>
                  </h1>
                </div>
              </group>
              <group name="info_1">
                <group>
                  <field name="code" required="1"/>
                  <field name="pedido_id" required="1"/>
                </group>
                <group>
                  <field name="customer_id"/>
                </group>
              </group>
              <notebook>
                <page string="Facturas">  
                  <group>
                    <field name="factura" nolabel="1">
                      <tree editable="bottom">
                        <field name="name" readonly="1"/>
                        <field name="partner_id" readonly="1"/>
                        <field name="journal_id" readonly="1"/>
                      </tree>
                    </field>
                  </group>
                </page>
              </notebook>
          </sheet>
      </form>
    </field> 
  </record>
  
  </odoo>